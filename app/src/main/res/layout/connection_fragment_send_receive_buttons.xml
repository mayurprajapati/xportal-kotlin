    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="285dp"
            app:columnCount="2"
            app:rowCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewAppsView"
                android:clickable="true"
                android:elevation="16dp"
                android:onClick="onClickOfCardButtons"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_nav_header"
                    android:fontFamily="@font/k2d_regular"
                    android:padding="20dp"
                    android:text="Apps"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewMusicView"
                android:clickable="true"
                android:elevation="16dp"
                android:onClick="onClickOfCardButtons"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_nav_header"
                    android:fontFamily="@font/k2d_regular"
                    android:padding="20dp"
                    android:text="Music"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewVideoView"
                android:clickable="true"
                android:elevation="16dp"
                android:onClick="onClickOfCardButtons"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_nav_header"
                    android:fontFamily="@font/k2d_regular"
                    android:padding="20dp"
                    android:text="Videos"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewPhotosView"
                android:clickable="true"
                android:elevation="16dp"
                android:onClick="onClickOfCardButtons"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_nav_header"
                    android:fontFamily="@font/k2d_regular"
                    android:padding="20dp"
                    android:text="Photos"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewFilesView"
                android:clickable="true"
                android:elevation="16dp"
                android:onClick="onClickOfCardButtons"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_nav_header"
                    android:fontFamily="@font/k2d_regular"
                    android:padding="20dp"
                    android:text="Files"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewHistoryView"
                android:clickable="true"
                android:elevation="16dp"
                android:onClick="onClickOfCardButtons"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_row="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/background_nav_header"
                    android:fontFamily="@font/k2d_regular"
                    android:padding="20dp"
                    android:text="History"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.GridLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>